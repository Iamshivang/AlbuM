<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlbuM" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/base2_bg</item>
        <item name="android:navigationBarColor">@color/base_bg</item>
    </style>

    <style name="Theme.AlbuM" parent="Base.Theme.AlbuM" >
        <item name="android:statusBarColor">@color/base2_bg</item>
    </style>

    <style name="imageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6%</item>
    </style>

    <style name="ThemeOverlay.AlbuM.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.AlbuM.Fullscreen" parent="Theme.AlbuM">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/base_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>