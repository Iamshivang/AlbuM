<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginBottom="7dp"
            android:layout_height="match_parent"
            android:src="@drawable/_bureger_icon"
            android:id="@+id/iv_ham_burger"
            app:tint="@color/primary" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_search_bar"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edit_text_bg"
            android:drawableStart="@drawable/ic_searchico"
            android:paddingStart="15dp"
            android:paddingBottom="1dp"
            android:gravity="start|center_vertical"
            android:hint="@string/start_tying_to_search"
            android:textAllCaps="false"
            android:textColorHint="@color/edit_text_hint"
            android:drawablePadding="15dp"
            android:transitionName="searchActivityTransition"
            android:textSize="18dp"
            android:textColor="@color/edit_text_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="textAutoCorrect" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/line"
        android:background="@color/red2"
        app:layout_constraintTop_toBottomOf="@+id/ll_search" />

</androidx.constraintlayout.widget.ConstraintLayout>